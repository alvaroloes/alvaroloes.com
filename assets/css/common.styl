@import 'nib'
@import 'utils/config'
@import 'utils/animations'

nav.navMenu
  animateListOnClass(showNav, animationShortest, animationMedium)
  a
    display: block
    margin: 0 auto 1em auto
    width: 23em
    font-weight: normal
    &:hover
      text-decoration: none
    div
      transition: transform animationShortest
      padding: 0.6em 1em
      background-color: navSectionBgColor
      &:hover
        background-color: navSectionHoverBgColor
        box-shadow: 0 0 30px 5px navSectionHoverShadowColor
      &:active
        transform: scale(0.95,0.95)

.underConstruction
  background: rgba(255,255,0,0.3);
  width: 35em;
  margin: 3em auto;
  padding: 1em;
  text-align: center;
  text-shadow: 0px 0px 5px black;
  box-shadow: 0px 0px 5px rgb(150,150,0) inset;
  h3
    font-family: Orbitron
    font-weight: bold
    text-transform: uppercase
    margin-bottom: 0.5em;