@import 'nib'
@import '../utils/config'

.solarSystem
  position: relative
  z-index: 10
  height: 100%
  overflow: auto
  section
    display: none
    opacity: 0
    transition-property: opacity
    transition-duration: animationShort
    position: relative
    width: 50em // 50em * 16px (body font size) = 800px
    height: 100%
    margin: 0 auto
    &.preshow
      display: block
    &.show
      opacity: 1

