@import 'nib'
@import '../utils/config'

.solarSystem
  position: relative
  z-index: 10
  min-height: 100%
  overflow: auto

  section
    display: none
    opacity: 0
    transition-property: opacity
    transition-duration: animationShort
    position: relative
    width: 50em // 50em * 16px (body font size) = 800px
    margin: 0 auto
    padding-bottom: footerHeight
    &.preshow
      display: block
    &.show
      opacity: 1
    header
      text-align: center
      color: black
      padding: 2em 0

footer
  padding-top: (footerHeight / 3)
  height: footerHeight - @padding-top
  position: absolute
  bottom: 0
  width: 100%
  background: linear-gradient(0deg, rgba(0,0,0,0.8), rgba(0,0,0,0))
  nav
    text-align: right
    a
      margin: 0 0.3em


