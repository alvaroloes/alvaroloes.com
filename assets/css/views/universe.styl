@import 'nib'
@import '../utils/config'

@keyframes pulseStar
  0%
    opacity: 0
  100%
    opacity: 1

.universe
  position: relative
  width: 100%
  height: 100%

  canvas
    position: absolute
    top: 0
    left: 0

  nav
    z-index: 1000
    position: fixed
    bottom: 0
    right: 0
    color: white
    padding: 0.3em
    a
      padding: 0 0.3em

  .solarSystem
    position: relative
    z-index: 10
    height: 100%
    section
      display: none
      opacity: 0
      transition-property: opacity
      transition-duration: animationShort
      position: relative
      width: 50em // 50em * 16px (body font size) = 800px
      height: 100%
      margin: 0 auto
      overflow: auto
      outline: 1px solid greenyellow;
      &.preshow
        display: block
      &.show
        opacity: 1



