@import 'nib'
@import '../utils/config'

.universe
  position: relative
  width: 100%
  height: 100%
  overflow: auto
  color: fontColorMain
  em
    font-style: italic
  strong
    font-weight: bold
  a
    color: fontColorMain
    text-decoration: none
    &:hover
      text-decoration: underline
  article
    p
      margin-bottom: 0.5em
    a
      font-weight: bold

  canvas
    position: fixed
    top: 0
    left: 0

#loadingUnverseView
  position: absolute
  top: 0
  left: 0
  bottom: 0
  right: 0
  border: 1px solid red
  z-index: 1000
