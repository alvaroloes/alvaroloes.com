@import 'nib'
@import '../utils/config'

@keyframes pulseStar
  0%
    opacity: 0
  100%
    opacity: 1

.universe
  position: relative
  width: 100%
  height: 100%

  canvas
    position: absolute
    top: 0
    left: 0

  nav
    position: fixed
    bottom: 0
    right: 0
    color: white
    padding: 0.3em
    a
      padding: 0 0.3em

  section
    visibility: hidden
    opacity: 0
    transition-property: opacity, visibility
    transition-duration: animationShort
    position: relative
    width: 50em
    height: 100%
    z-index: 10
    margin: 0 auto
    background: rgba(255,255,255,0.5)
    overflow: auto
    &.show
      visibility: visible
      opacity: 1



