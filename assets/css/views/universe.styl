@import 'nib'
@import '../utils/config'

.universe
  position: relative
  width: 100%
  height: 100%
  overflow: auto
  color: fontColorMain
  em
    font-style: italic
  a
    color: fontColorMain
    text-decoration: none
    &:hover
      text-decoration: underline
  article
    p
      margin-bottom: 0.5em
    a
      font-weight: bold

  canvas
    position: fixed
    top: 0
    left: 0

