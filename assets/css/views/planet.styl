    background: linear-gradient(90deg,
                                rgba(255,255,255,0),
                                rgba(255,255,255,0.8) 30%,
                                rgba(255,255,255,0.8) 70%,
                                rgba(255,255,255,0))
  article
    background-color: navSectionBgColor
    padding: 1em
    margin-bottom: 1em
    border-radius: 10px;
    h3
      margin-bottom: 0.5em
    p
      text-indent: 1em
      text-align: justify