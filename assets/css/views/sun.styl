@import 'nib'
@import '../utils/config'

section.sun
  header
    text-align: center
    margin-top: 1em
    color: black
    background: radial-gradient(ellipse closest-side,
                                rgba(255,255,255,0.8),
                                rgba(255,255,255,0.15) 70%,
                                rgba(255,255,255,0) 90%)
    padding: 2em 0
    h1
      margin-bottom: 0.5em
  nav
    a
      margin: 0 auto 1em auto
      display: block
      width: 21em
      background-color: backgroundColorMain
      text-decoration: none
      padding: 0.6em 1em
      h3
        margin-bottom: 0.1em