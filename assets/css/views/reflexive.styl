@import 'nib'
@import '../utils/config'
@import '../utils/animations'

section.planet.reflexive
  h4
    text-align: center
    margin: 1em 0
    text-shadow: 1px 1px 3px black

#quotesSliderContainer
  position: relative
  background-color: rgba(0,0,0,0.8)
  quotes: "\201C""\201D""\2018""\2019";
  &:before
  &:after
    position: absolute
    font-family: Gentium
    font-size: 5em
  &:before
    left: 0.1em
    top: -0.1em
    content: open-quote
  &:after
    right: 0.1em
    bottom: -0.6em
    content: close-quote

#quotesSlider
  blockquote
    font-size: 2.3em
    text-align: center
    font-family: Tulpen
    ul
      list-style: none
