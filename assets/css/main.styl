  url('fonts/gentium-basic.woff2') format('woff2'),
  url('fonts/gentium-basic.woff') format('woff'),
  url('fonts/gentium-basic.ttf') format('truetype'),
  url('fonts/gentium-basic.svg#tulpen_oneregular') format('svg');
  font-weight: normal;
  font-style: normal;

}

global-reset()

html,body
  font-size: 16px
  height: 100%
  overflow: hidden
  font-family: Exo
  line-height: 1.3
  letter-spacing: 1px

h1
  font-family: Exo
  font-size: 2.5em;
  font-weight: bold
h2
  font-size: 1.8em;
h3
  font-size: 1.6em;
h4
  font-size: 1.4em;
h5
  font-size: 1.2em;
h6
  font-size: 1em;

::-webkit-scrollbar
  width: 8px
  height: 8px

::-webkit-scrollbar-track
  display: none

::-webkit-scrollbar-thumb
  border-radius: 4px
  background: rgba(255,255,255,0.3)

::-webkit-scrollbar-corner
  background: rgba(255,255,255,0.3)

#superuniverse
  width: 100%
  height: 100%
  background: black

